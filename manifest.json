{
	"manifest_version": 2,
	
	"name": "No comments",
	"description": "Stop rendering comments",
	"version": "1.0.0",

	"permissions": ["history", "storage"],
	"background": {
		"persistent": false,
		"scripts": ["js/clear_comments.js"]
	},
	
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},

	"icons": {
    "48": "images/icon48.png",
    "96": "images/icon96.png"
	},

	"browser_action": {
	    "default_icon": "images/icon96.png"
	}
}